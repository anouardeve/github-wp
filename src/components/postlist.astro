---
import cx from "classnames";
import { Image, Picture } from "astro:assets";
import Label from "@components/ui/label.astro";

const { post, authors, aspect, preloadImage } = Astro.props;

const category =
  post.categories.edges.find((category) => category.isPrimary) ??
  post.categories.edges[0];
---

<div
  class={`group cursor-pointer transition-all duration-300 ease-in-out hover:translate-y-[-5px] ${
    post.isSticky ? "col-span-full md:grid md:grid-cols-2 md:gap-10" : ""
  }`}
>
  <div
    class={cx(
      "relative overflow-hidden rounded-lg bg-gray-100 transition-all duration-300 dark:bg-gray-800",
      post.isSticky ? "aspect-video" : aspect === "landscape" ? "aspect-video" : "aspect-square"
    )}
  >
    <a href={`/${post.slug}/`}>
      <Picture
        formats={["avif", "webp"]}
        src={post.featuredImage
          ? post.featuredImage.node.mediaItemUrl
          : import("../assets/placeholder.jpg")}
        alt={post.title}
        widths={[200, 400, 800]}
        sizes="(max-width: 640px) 90vw, (max-width: 1024px) 45vw, 33vw"
        aspectRatio={aspect === "landscape" ? "16:9" : "1:1"}
        loading={preloadImage ? "eager" : "lazy"}
        class="h-full w-full rounded-lg object-cover transition-all duration-300 group-hover:scale-105"
        inferSize={true}
      />
    </a>
  </div>

  <div class="mt-4 md:mt-0">
    <a href={`/category/${category.node.slug}/`} class="inline-block">
      <Label theme="primary">{category.node.name}</Label>
    </a>
    <h2
      class={`mt-2 font-semibold tracking-normal text-gray-800 dark:text-white ${
        post.isSticky ? "text-3xl" : "text-xl"
      }`}
    >
      <a href={`/${post.slug}/`} class="hover:text-primary-600 dark:hover:text-primary-400">
        {post.title}
      </a>
    </h2>
    {post.isSticky && (
      <p class="mt-3 text-gray-600 dark:text-gray-300" set:html={post.excerpt} />
    )}
    <div class="mt-3 flex items-center space-x-3 text-gray-500 dark:text-gray-400">
      <div class="flex items-center gap-3">
        <div class="relative h-5 w-5 flex-shrink-0">
          <Image
            src={authors?.[post.author.node.slug]
              ? authors[post.author.node.slug].avatar_urls["48"]
              : import(`../assets/authors/placeholder.jpg`)}
            alt={post.author.node.name}
            width={40}
            height={40}
            loading="eager"
            class="rounded-full"
          />
        </div>
        <a href={`/author/${authors[post.author.node.slug].user_nicename}/`} class="hover:text-primary-600 dark:hover:text-primary-400">
          <span class="text-sm">{authors[post.author.node.slug].display_name}</span>
        </a>
      </div>
      <span class="text-xs text-gray-300 dark:text-gray-600"> &bull; </span>
      <time class="text-sm" datetime={post.date}>
        {new Date(post.date).toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })}
      </time>
    </div>
  </div>
</div>